<fieldset class="field_answer">
  <div class="attachment fields">
    <div class="row">
      <div class="col-md-7">
        <%= f.text_field :content , class: "form-control"%>
      </div>
      <div class="col-md-2">
        <%= f.check_box :is_correct , id: "answer", class: "BOOLEAN"%>
      </div>
      <span class="btn btn-danger btn-xs pull-right">
        <%= link_to_remove_fields t("page.admin.words.remove_answer"), f%>
      </span>
    </div>
    <br />
  </div>
</fieldset>
