  make_radio_from_checkbox = function() {
    $('.radio_answer').click(function() {
      if ($('#question_question_type').val() === 'single') {
        $('.radio_answer').not(this).attr('checked', false);
      }
    });
    $('#question_question_type').on('change', function() {
